<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnrDuaListCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp" >

        <RelativeLayout
            android:id="@+id/relativeDuaCardBg"
            android:layout_width="166dp"
            android:layout_height="222dp"
            android:background="#282828"
            android:padding="10dp" >

            <ImageButton
                android:id="@+id/iButtonPlayDuaListCard"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_play_white" />

            <TextView
                android:id="@+id/txtDuaListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/txtDuaListSubTitle"
                android:layout_alignParentBottom="false"
                android:text="ZİKR ALLAHIN BƏNDƏLƏR"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="82dp"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="#D0A568" />

            <TextView
                android:id="@+id/txtDuaListSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/divider2"
                android:layout_marginBottom="3dp"
                android:text="Allah sevgisinin …"
                android:textColor="#D0A568" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>