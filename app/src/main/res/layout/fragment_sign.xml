<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_bg"
                android:padding="32dp">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingStart="5dp"
                    android:text="@string/_personal_information"
                    android:textColor="#22242A"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView13"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingStart="5dp"
                    android:text="@string/_name"
                    android:textColor="#22242A" />

                <EditText
                    android:id="@+id/etSignName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView14"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_bold"
                    android:inputType="textPersonName"
                    android:textColor="#22242A" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etSignName"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingStart="5dp"
                    android:text="@string/_gender"
                    android:textColor="#22242A" />


                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/textView15"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinnerGender"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingStart="5dp"
                    android:text="@string/_email_adress"
                    android:textColor="#22242A" />

                <EditText
                    android:id="@+id/etSignEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView16"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_bold"
                    android:inputType="textEmailAddress"
                    android:textColor="#22242A" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etSignEmail"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingStart="5dp"
                    android:text="@string/_username"
                    android:textColor="#22242A" />

                <EditText
                    android:id="@+id/etSignUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView17"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_bold"
                    android:inputType="textPersonName"
                    android:textColor="#22242A" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etSignUsername"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingStart="5dp"
                    android:text="@string/_phone"
                    android:textColor="#22242A" />

                <LinearLayout
                    android:id="@+id/countryPicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView18"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0" />

                    <EditText
                        android:id="@+id/etPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="phone" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/countryPicker"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingStart="5dp"
                    android:text="@string/_password"
                    android:textColor="#22242A" />

                <EditText
                    android:id="@+id/etSignPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView19"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_bold"
                    android:inputType="textPassword"
                    android:textColor="#22242A" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etSignPassword"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingStart="5dp"
                    android:text="@string/_confirm_password"
                    android:textColor="#22242A" />

                <EditText
                    android:id="@+id/etSignRePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView20"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_bold"
                    android:inputType="textPassword"
                    android:textColor="#22242A" />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="319dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etSignRePassword"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_login_bg"
                    android:fontFamily="@font/rubik_bold"
                    android:text="@string/_register"
                    android:textColor="#2E476E"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtAlreadyHaveAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnRegister"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato"
                    android:text="@string/_already_have_account"
                    android:textColor="#2D3747"
                    android:textSize="18sp" />

                <ProgressBar
                    android:id="@+id/pbRegisterLoading"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etSignRePassword"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:visibility="gone" />


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>





