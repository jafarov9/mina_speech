<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PlaceInsideActivity"
    android:orientation="horizontal">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/_standart_bg"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/iButtonBackPlaceInside"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_backarrow" />

                <ImageView
                    android:id="@+id/imgCoverPlaceInside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iButtonBackPlaceInside"
                    android:layout_marginTop="15dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/placeinside" />

                <LinearLayout
                    android:id="@+id/lnrHorPlaceInside"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgCoverPlaceInside"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lnrPlaceWorkTime"
                        android:layout_width="82dp"
                        android:layout_height="72dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_place_work_time">

                        </ImageView>

                        <TextView
                            android:id="@+id/txtPlaceWorkTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins"
                            android:text="8AM-10PM"
                            android:textAlignment="center"
                            android:textColor="#42B72A" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrPlaceCallNow"
                        android:layout_width="82dp"
                        android:layout_height="72dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_place_call_now">

                        </ImageView>

                        <TextView
                            android:id="@+id/txtPlaceCallNow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins"
                            android:text="@string/_call_now"
                            android:textAlignment="center"
                            android:textColor="#525252" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrPlaceMap"
                        android:layout_width="82dp"
                        android:layout_height="72dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_place_map">

                        </ImageView>

                        <TextView
                            android:id="@+id/txtPlaceMap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins"
                            android:text="@string/_map"
                            android:textAlignment="center"
                            android:textColor="#525252" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/iButtonFavoritePlace"
                        android:layout_width="45dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="0"
                        android:background="@null"
                        android:src="@drawable/ic_heart">

                    </ImageButton>


                </LinearLayout>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lnrHorPlaceInside"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins"
                    android:text="@string/_about_the_place"
                    android:textColor="#24253D"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/txtAboutThePlace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView8"
                    android:layout_marginTop="10dp"
                    android:text="The city's early population originated from a mix of Latins, Etruscans and Sabines. Eventually, the city successively became the capital. The city's early population originated from a mix of Latins, Etruscans and Sabines. Eventually, the city successively became the capital.The city's early population originated from a mix of Latins, Etruscans and Sabines. Eventually, the city successively became the capital."
                    app:lineHeight="26sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtAboutThePlace"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:text="@string/_categories"
                    android:textColor="#24253D"
                    android:textSize="22sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlaceCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView12"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rvPlaceCategories"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins"
                    android:text="@string/_tags"
                    android:textColor="#24253D"
                    android:textSize="22sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlaceTags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView7"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rvPlaceTags"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins"
                    android:text="@string/_gallery"
                    android:textColor="#24253D"
                    android:textSize="22sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPlaceGallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView10"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>