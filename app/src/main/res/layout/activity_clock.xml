<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_standart_bg"
    android:padding="8dp"
    tools:context=".activity.ClockActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottiBackClock"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/round_wave" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_below="@id/lottiBackClock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textColor="#313B4A"
        android:textSize="50sp">
    </TextClock>

    <com.hajma.apps.mina2.utils.CustomAnalogClock
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/textClock"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true">

    </com.hajma.apps.mina2.utils.CustomAnalogClock>

</RelativeLayout>