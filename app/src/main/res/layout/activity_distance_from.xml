<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_standart_bg"
    android:padding="16dp"
    tools:context=".activity.DistanceFromActivity">

    <ImageButton
        android:id="@+id/iButtonBackDistanceFrom"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        app:srcCompat="@drawable/ic_backarrow" />

    <ImageView
        android:id="@+id/imgDistanceTo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/iButtonBackDistanceFrom"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/imgSpaceMan"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        app:srcCompat="@drawable/spaceman" />
</RelativeLayout>