<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_standart_bg"
    android:padding="8dp"
    tools:context=".activity.NewsAudioPlayActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottiBackNewsAudioPlay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/round_wave" />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lottiBackNewsAudioPlay"
        android:layout_marginTop="5dp"
        android:clipToPadding="false"
        android:foregroundGravity="center"
        android:overScrollMode="never" />

</RelativeLayout>