<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnrCardSuggestionsLong"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/_standart_bg"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewSuggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="13dp"
        app:cardBackgroundColor="#2895FF"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/txtCardSuggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:maxWidth="161dp"
            android:minWidth="160dp"
            android:minHeight="27dp"
            android:text="Ne var ne yox"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="#FFFFFF" />
    </androidx.cardview.widget.CardView>
</LinearLayout>